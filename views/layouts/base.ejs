  <!doctype html>
  <html lang="es">
  <head>
    <meta charset="utf-8">
    <title>Control de Activos</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/css/main.css" rel="stylesheet">
  </head>
  <body>
    <header>
      <h1>Control de Activos</h1>
      <div class="header-actions">
        <% if (user && ['Administrador', 'Técnico', 'Tecnico'].includes(user.Rol)) { %>
          <a class="btn" href="/activos">📋 Lista de activos</a>
          <a class="btn" href="/activos?view=form">📝 Registrar activo</a>
        <% } %>
        
        <% if (user) { %>
          <form action="/logout" method="post" class="logout-form">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit">🚪 Cerrar sesión (<%= user.Nombre %>)</button>
          </form>
        <% } %>
      </div>
    </header>
    <main>
      <%- typeof content === 'string' ? content : '' %>
      <%- typeof body !== 'undefined' ? body : '' %>
    </main>
  </body>
  </html>
