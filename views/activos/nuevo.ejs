<%- include('../layouts/base', { body: `
  <section>
    <h2>Registrar Activo</h2>
    ${error ? `<div class="alert">${error}</div>` : (typeof query !== 'undefined' && query.ok ? '<div class="ok">Guardado</div>' : '')}
    <form method="post" action="/activos/nuevo">
      <label>Categoría</label>
      <select name="ID_CategoriaActivos" required>
        ${categorias.map(c => `<option value="${c.ID_CategoriaActivos}">${c.Nombre}</option>`).join('')}
      </select>

      <label>Área</label>
      <select name="ID_Area" required>
        ${areas.map(a => `<option value="${a.ID_Area}">${a.Nombre_Area}</option>`).join('')}
      </select>

      <label>Marca</label>
      <input name="Marca" maxlength="50">
      <label>Modelo</label>
      <input name="Modelo" maxlength="50">

      <label>Estado</label>
      <input name="Estado" maxlength="50" required>

      <label>Fecha de adquisición</label>
      <input type="date" name="Fecha_Adquisicion">

      <label>Precio lista</label>
      <input type="number" step="0.01" name="Precio_Lista">

      <input type="hidden" name="_csrf" value="${csrfToken}">
      <button>Guardar</button>
    </form>
  </section>
` }) %>
